{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_AUTH_SERVICE_URL": "https://aservice.up.railway.app",
    "VITE_CONGLOMERADO_SERVICE_URL": "https://conglomeradoservice.up.railway.app",
    "VITE_BRIGADA_SERVICE_URL": "https://brigada-service-production.up.railway.app",
    "VITE_ESPECIE_SERVICE_URL": "https://especie-service-production.up.railway.app",
    "VITE_OBSERVACION_SERVICE_URL": "https://observacion-service-production.up.railway.app",
    "VITE_GATEWAY_URL": "https://gateway.up.railway.app",
    "VITE_NODE_ENV": "production"
  }
}
